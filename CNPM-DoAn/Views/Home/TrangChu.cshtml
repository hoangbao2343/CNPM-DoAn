@model Dictionary<string, List<CNPM_DoAn.dtb.San_Pham>>


@{
    ViewBag.Title = "TrangChu";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Fahasha | Nhà sách trực tuyến</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        /*CSS*/
        .book-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.1);
        }

        .hero-image {
            background-image: url('../../content/image/nhagiakim.png');
            background-image: linear-gradient(rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.5)), url('https://images.unsplash.com/photo-1589998059171-988d322dfe03?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=772&q=80');
            background-size: cover;
            background-position: center;
        }

        .fade-in {
            animation: fadeIn 1s ease-in;
        }

        .search-box:focus {
            outline: none;
            box-shadow: 0 0 0 3px rgba(239, 68, 68, 0.5);
        }

        /* Modal animation */
        #login-modal, #account-modal, #cart-modal {
            transition: opacity 0.3s ease;
        }

            #login-modal:not(.hidden), #account-modal:not(.hidden), #cart-modal:not(.hidden) {
                animation: fadeIn 0.3s ease;
            }

        .cart-badge {
            position: absolute;
            top: -5px;
            right: -5px;
            background-color: #EF4444;
            color: white;
            border-radius: 50%;
            width: 18px;
            height: 18px;
            font-size: 10px;
            display: flex;
            align-items: center;
            justify-content: center;
        }
    </style>
</head>
<body class="bg-gray-50 font-sans">
    <!-- Header/Navigation -->
    <header class="bg-white shadow-md sticky top-0 z-50">
        <div class="container mx-auto px-4 py-3 flex justify-between items-center">
            <div class="flex items-center space-x-2">
                <i class="fas fa-book-open text-red-600 text-2xl"></i>
                <h1 class="text-2xl font-bold text-gray-800">Fahasha</h1>
            </div>

            <div class="hidden md:flex space-x-6">
                <a href="#" class="text-gray-800 hover:text-blue-600 font-medium">Home</a>
                <a href="#" class="text-gray-800 hover:text-blue-600 font-medium">Books</a>
                <a href="#" class="text-gray-800 hover:text-blue-600 font-medium">Categories</a>
                <a href="#" class="text-gray-800 hover:text-blue-600 font-medium">About</a>
                <a href="#" class="text-gray-800 hover:text-blue-600 font-medium">Contact</a>
            </div>

            <div class="flex items-center space-x-4">
                <div class="relative hidden md:block">
                    <input type="text" placeholder="Search books..." class="search-box pl-10 pr-4 py-2 rounded-full border border-gray-300 focus:border-blue-500 w-64">
                    <i class="fas fa-search absolute left-3 top-2.5 text-gray-400"></i>
                </div>
                <div class="flex space-x-2">
                    <button id="cart-btn" class="p-2 rounded-full hover:bg-gray-100 relative">
                        <i class="fas fa-shopping-cart text-gray-700"></i>
                        <span id="cart-badge" class="cart-badge hidden">0</span>
                    </button>
                    <button id="account-btn" class="p-2 rounded-full hover:bg-gray-100">
                        <i class="fas fa-user text-gray-700"></i>
                    </button>
                </div>
                <button id="mobile-menu-button" class="md:hidden p-2 rounded-full hover:bg-gray-100">
                    <i class="fas fa-bars text-gray-700"></i>
                </button>
            </div>
        </div>

        <!-- Mobile menu -->
        <div id="mobile-menu" class="hidden md:hidden bg-white border-t py-2 px-4">
            <div class="mb-3">
                <input type="text" placeholder="Search books..." class="search-box w-full pl-10 pr-4 py-2 rounded-full border border-gray-300">
                <i class="fas fa-search absolute left-6 top-3 text-gray-400"></i>
            </div>
            <div class="flex flex-col space-y-2">
                <a href="#" class="block py-2 text-gray-800 hover:text-blue-600">Home</a>
                <a href="#" class="block py-2 text-gray-800 hover:text-blue-600">Books</a>
                <a href="#" class="block py-2 text-gray-800 hover:text-blue-600">Categories</a>
                <a href="#" class="block py-2 text-gray-800 hover:text-blue-600">About</a>
                <a href="#" class="block py-2 text-gray-800 hover:text-blue-600">Contact</a>
            </div>
        </div>
    </header>

    <!-- Hero Section -->
    <section class="hero-image text-white py-20 md:py-32 fade-in">
        <div class="container mx-auto px-4 text-center">
            <h1 class="text-4xl md:text-6xl font-bold mb-6">Khám phá thế giới sách trực tuyến</h1>
            <p class="text-xl md:text-2xl mb-8 max-w-2xl mx-auto">Hơn 100,000 tựa sách với nhiều thể loại đa dạng dành cho bạn.</p>
            <div class="flex flex-col md:flex-row justify-center gap-4">
                <button class="bg-red-600 hover:bg-red-700 px-8 py-3 rounded-full font-medium transition duration-300">Xem sách</button>
                <button class="bg-white hover:bg-gray-100 text-gray-800 px-8 py-3 rounded-full font-medium transition duration-300">Khuyến mãi</button>
            </div>
        </div>
    </section>

    <!-- Featured Books -->
    <section class="py-16 bg-white">
        <div class="container mx-auto px-4">
            <div class="flex justify-between items-center mb-10">
                <h2 class="text-3xl font-bold text-gray-800">Sách nổi bật</h2>
                <a href="#" class="text-red-600 hover:text-red-800 font-medium flex items-center">
                    Xem tất cả <i class="fas fa-arrow-right ml-2"></i>
                </a>
            </div>

            <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-8">
                <!-- Book Card 1 -->
                @foreach (var group in Model)
                {
                    <h2 class="text-2xl font-bold text-gray-800 mb-4">@group.Key</h2>

                    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6 mb-12">
                        @foreach (var sp in group.Value)
                        {
                          <a href="@Url.Action("ChiTiet", "SanPham", new { id = sp.MA_SP })" class="block">
                              <div class="book-card bg-white rounded-lg overflow-hidden shadow-md transition duration-300">
                                  <div class="relative">
                                      <img src="~/@sp.HINH_ANH" alt="@sp.TEN_SP" class="w-full h-64 object-cover" />
                                      <div class="absolute top-2 right-2 bg-yellow-400 text-xs font-bold px-2 py-1 rounded">
                                          @(sp.DISCOUNT > 0 ? $"{sp.DISCOUNT}% OFF" : "Mới")
                                      </div>
                                  </div>
                                  <div class="p-4">
                                      <h3 class="font-bold text-lg mb-1">@sp.TEN_SP</h3>
                                      <p class="text-gray-600 text-sm mb-2">@sp.MO_TA</p>
                                      <div class="flex justify-between items-center">
                                          <span class="font-bold text-gray-800">
                                              @String.Format("{0:#,##0} đ", sp.GIA_BAN)
                                          </span>
                                          <button class="add-to-cart bg-blue-600 hover:bg-blue-700 text-white px-3 py-1 rounded text-sm transition duration-300"
                                                  data-id="@sp.MA_SP"
                                                  data-title="@sp.TEN_SP"
                                                  data-price="@sp.GIA_BAN"
                                                  data-image="@sp.HINH_ANH">
                                              Add to Cart
                                          </button>
                                      </div>
                                  </div>
                              </div>
                          </a>
                        }
                    </div>
                }
                
            </div>
        </div>
    </section>

    <!-- Categories Section -->
    <section class="py-16 bg-gray-100">
        <div class="container mx-auto px-4">
